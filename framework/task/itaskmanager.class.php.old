namespace CPath\Framework\Task;

interface ITaskManager extends ITaskCollection {

    // Option flags
    const OPTION_REMOVE_EXPIRED          = 0x1;    // Remove tasks that have expired from the collection

    /**
     * Process all filtered task states with the provided options and updates the collection as necessary
     * @param int $options options for processing tasks states
     */
    function processTaskStates($options=0);

    /**
     * Start all filtered tasks with ITask::EVENT_START
     * @param int $options options for processing tasks states
     */
    function start($options=0);

    /**
     * Pause all filtered tasks with ITask::EVENT_PAUSE
     * @param $options
     * @return mixed
     */
    function pause($options=0);

    /**
     * Abort all filtered tasks with ITask::EVENT_ABORT
     * @param $options
     * @return mixed
     */
    function abort($options=0);
}
